<%= form_for @company, :html=>{:class=>'form-horizontal', :id=>'new'}  do |f|%>

    <%= render "common/error_messages", :target=>@company %>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">公司名称</label>
      <div class="col-sm-7">
        <%= f.text_field :name, :class=>"form-control",:value=>@company.name %>
      </div>
    </div>
    <div class="form-group" id="website">
      <label for="website" class="col-sm-2 control-label">官网</label>
      <div class="col-sm-7">
        <%= f.text_field :website, :class=>"form-control", :value=>@company.website %>
      </div>
    </div>
    <div class="form-group" id="value_amount">
      <label for="value_amount" class="col-sm-2 control-label">公司估值</label>
      <div class="col-sm-7">
        <%= f.text_field :value_amount, :class=>"form-control", :value=>@company.value_amount %>
      </div>
    </div>
    <div class="form-group" id="founder">
      <label for="founder" class="col-sm-2 control-label">公司创始人</label>
      <div class="col-sm-7">
        <%= f.text_field :founder, :class=>"form-control", :value=>@company.founder %>
      </div>
    </div>
    <div class="form-group" id="published_at">
      <label for="published_at" class="col-sm-2 control-label">成立时间</label>
      <div class="col-sm-7" >
        <input type="text" class="form-control" value="<%= @company.published_at.strftime('%Y-%m-%d')%>" id="company_published_at" name="company[published_at]" data-date-format="yyyy-mm-dd" data-link-format="yyyy-mm-dd" readonly>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button id='submit' type="submit" class="btn btn-default">提交</button>
      </div>
    </div>
<% end %>

<script>
    $(function(){
        $('#submit').click(function(){
            $('#new').submit();
        });

        $("#company_published_at").datetimepicker({
            language:  'zh-CN',
            weekStart: 1,
            todayBtn:  1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });
    });

</script>