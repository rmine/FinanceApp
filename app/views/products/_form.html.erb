<%= form_for @product, :html=>{:class=>'form-horizontal', :id=>'new'}  do |f|%>

    <%= render "common/error_messages", :target=>@product %>
    <div class="form-group" id="name">
      <label for="name" class="col-sm-2 control-label">产品名称</label>
      <div class="col-sm-7">
        <%= f.text_field :name, :class=>"form-control",:value=>@product.name %>
      </div>
    </div>
    <div class="form-group" id="category_id">
      <label for="category_id" class="col-sm-2 control-label">产品类别</label>
      <div class="col-sm-7">
        <%= f.select :category_id, options_for_select(Category.approved.pluck(:name,:id), @product.category_id),:class=>"form-control" %>
      </div>
    </div>
    <div class="form-group" id="company_id">
      <label for="value_amount" class="col-sm-2 control-label">所属公司名称</label>
      <div class="col-sm-7">
        <%= f.select :company_id, options_for_select(Company.approved.pluck(:name,:id), @product.company_id),:class=>"form-control" %>
      </div>
    </div>
    <div class="form-group" id="ios_downloadurl">
      <label for="founder" class="col-sm-2 control-label">ios下载</label>
      <div class="col-sm-7">
        <%= f.text_field :ios_downloadurl, :class=>"form-control", :value=>@product.ios_downloadurl %>
      </div>
    </div>
    <div class="form-group" id="android_downloadurl">
      <label for="founder" class="col-sm-2 control-label">android下载</label>
      <div class="col-sm-7">
        <%= f.text_field :android_downloadurl, :class=>"form-control", :value=>@product.android_downloadurl %>
      </div>
    </div>
    <div class="form-group" id="published_at">
      <label for="establishmented_at" class="col-sm-2 control-label">立项时间</label>
      <div class="col-sm-7" >
        <input type="text" class="form-control" value="<%= @product.establishmented_at.strftime('%Y-%m-%d') if @product.establishmented_at.present? %>" id="product_establishmented_at" name="product[establishmented_at]" data-date-format="yyyy-mm-dd" data-link-format="yyyy-mm-dd" readonly>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button id='submit' type="submit" class="btn btn-default">提交</button>
      </div>
    </div>
<% end %>

<script>
    $(function(){
        $('#submit').click(function(){
            $('#new').submit();
        });

        $("#product_establishmented_at").datetimepicker({
            language:  'zh-CN',
            weekStart: 1,
            todayBtn:  1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });
    });

</script>