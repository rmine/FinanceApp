<%= form_for @finance_organization, :html=>{:class=>'form-horizontal', :id=>'new'}  do |f|%>

    <%= render "common/error_messages", :target=>@finance_organization %>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">机构名称</label>
      <div class="col-sm-7">
        <%= f.text_field :name, :class=>"form-control",:value=>@finance_organization.name %>
      </div>
    </div>
    <div class="form-group" id="is_person">
      <label for="value_amount" class="col-sm-2 control-label">机构类型</label>
      <div class="col-sm-7">
        <%= f.select :is_person, options_for_select(FinanceOrganization::ORG_TYPE, @finance_organization.is_person),:class=>"form-control" %>
      </div>
    </div>
    <div class="form-group" id="description">
      <label for="description" class="col-sm-2 control-label">描述</label>
      <div class="col-sm-7">
        <%= f.text_area :description, :class=>"form-control", :row=>5, :value=>@finance_organization.description %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button id='submit' type="submit" class="btn btn-default">提交</button>
      </div>
    </div>
<% end %>

<script>
    $(function(){
        $('#submit').click(function(){
            $('#new').submit();
        });

    });

</script>