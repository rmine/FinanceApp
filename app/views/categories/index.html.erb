<%= form_tag categories_url, :id=>'search', :method=>:get, :class=>'form-inline' do %>
    <div class="form-group" style="padding-left: 15px">
      <label for="state" class="control-label">状态:</label>
    </div>
    <%= select_tag 'state', options_for_select(PublicConstant::SEARCH_STATE_TYPE_HASH, params[:state]),:class=>"form-control" %>
    <button id="search_btn" type="submit" class="btn btn-default" style="float:right">搜索</button>
<% end %>

<hr>
<a href="<%= new_category_url %>" type="button" class="btn btn-primary">新增</a>


<%= form_tag categories_batch_update_url, :id=>'batch_update_form', :method=>:post do%>
<div class="panel panel-info">
  <div class="panel-heading">公司列表</div>

  <table class="table table-bordered table-hover">
    <thead>
        <th class="col-sm-0"><input type="checkbox" id="checked_all"></th>
        <th class="col-sm-0">id</th>
        <th class="col-sm-3">类别名称</th>
        <th class="col-sm-3">描述</th>
        <th class="col-sm-2">创建时间</th>
        <th class="col-sm-2">修改时间</th>
        <th class="col-sm-1">状态</th>
        <th class="col-sm-1">操作</th>
    </thead>
    <tbody>
    <% @categories.each do |data| %>
        <tr>
          <td><input type="checkbox" name='ids[]' id="checked" value='<%= data.id %>'></td>
          <td><%= data.id %></td>
          <td><%= data.name %></td>
          <td><%= data.description %></td>
          <td><%= data.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
          <td><%= data.updated_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
          <td><%= PublicConstant::STATE_TYPE_HASH_INVERT[data.state] %></td>
          <td>
            <a target="" href="#"><span title="查看" class="glyphicon glyphicon-list-alt"></span></a>
            <a target="" href="<%= edit_category_url(:id=>data.id) %>"><span title="修改" class="glyphicon glyphicon-wrench"></span></a>
            <a class='delete_record' href="<%= categories_delete_record_url(:id=>data.id) %>"><span title="删除" class="glyphicon glyphicon-trash"></span></a>
          </td>
        </tr>
    <%end%>
    </tbody>
  </table>
</div>
<span>共<%= @categories.total_entries %>条</span>
<%= will_paginate @categories, :renderer => BootstrapLinkRenderer, :style=>'float: right' %>

<hr>
<div class='clearfix'>
  <div class="radio-inline">
    <label>
      <input type="radio" name="state" id="pro" value="<%=PublicConstant::ST_APPROVED%>" checked><span>通过</span>
    </label>
  </div>  
  <div class="radio-inline">
    <label>
      <input type="radio" name="state" id="del" value="<%=PublicConstant::ST_DELETE%>"><span>删除</span>
    </label>
  </div>
  <br>
  <button id='batch_btn' type="button" class="btn btn-info">批量处理</button>
</div>

<% end %>


<script>
  $(function(){
    $("#search_btn").click(function(){
      $("#search").submit();
    });
    

    $('.checked_pic').fancybox();

    $(".delete_record").click(function(){
      if(!confirm("确认删除？")) {
          return false;
      }
    });

    $('#checked_all').click(function(){
      if($("#checked_all:checked").length > 0 ){
        $("input#checked").prop('checked', 'checked');
      }else{
        $("input#checked").removeAttr('checked');
      }
    });

    $("#batch_btn").click(function(){
      if($("#checked:checked").length <= 0){
        alert('至少选择一条记录~');
        return;
      }
      if($("input[type=radio]:checked").length <= 0){
        alert('请选择操作~');
        return;
      }
      $("#batch_update_form").submit();
    });
    
  });


</script>




